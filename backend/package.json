{
  "name": "incident-log-backend",
  "version": "1.0.0",
  "description": "Express backend for endpoint incident log processor",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "db:setup": "node db/setup.js --seed",
    "db:setup:test": "cross-env DB_NAME=incident_logs_test node db/setup.js",
    "test": "cross-env NODE_ENV=test jest --runInBand --forceExit",
    "test:watch": "cross-env NODE_ENV=test jest --watch --runInBand"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "mysql2": "^3.9.1"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "jest": "^29.7.0",
    "nodemon": "^3.0.3",
    "supertest": "^6.3.4"
  }
}


